<Page x:Class="VendingMachines.Desktop.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VendingMachines.Desktop.Pages"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main" 
        Background="#FFE6E6E6">

    <Page.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="20,5,0,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Foreground" Value="#4CAF50"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MenuExpanderStyle" TargetType="Expander">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="20,5,0,5"/>
        </Style>

        <Style x:Key="SubMenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>

        <Style x:Key="FilterButtonStyle" TargetType="RadioButton">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Page.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#2B2E36">
            <StackPanel>
                <TextBlock Text="Лого" Foreground="White" FontSize="24" Margin="20" FontWeight="Bold"/>

                <TextBlock Text="Навигация" Foreground="Gray" Margin="20,10,0,10"/>

                <StackPanel>
                    <RadioButton Content="🔍 Главная" Style="{StaticResource MenuButtonStyle}" IsChecked="True"/>
                    <RadioButton Content="💻 Монитор ТА" Style="{StaticResource MenuButtonStyle}"/>

                    <Expander Header="📄 Детальные отчеты" Style="{StaticResource MenuExpanderStyle}">
                        <StackPanel Margin="20,0,0,0">
                            <Button Content="Отчет по продажам" Style="{StaticResource SubMenuButtonStyle}"/>
                        </StackPanel>
                    </Expander>

                    <Expander Header="🛒 Учет ТМЦ" Style="{StaticResource MenuExpanderStyle}"/>

                    <Expander Header="⚙ Администрирование" Style="{StaticResource MenuExpanderStyle}">
                        <StackPanel Margin="20,0,0,0">
                            <Button Content="Торговые автоматы" Style="{StaticResource SubMenuButtonStyle}"/>
                            <Button Content="Компании" Style="{StaticResource SubMenuButtonStyle}"/>
                            <Button Content="Пользователи" Style="{StaticResource SubMenuButtonStyle}"/>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Background="#F0F2F5">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="☰" Grid.Column="0" Margin="10" Background="Transparent" BorderThickness="0"/>
                    <TextBlock Text="ООО Торговые Автоматы" Grid.Column="1" VerticalAlignment="Center" FontSize="16" FontWeight="SemiBold"/>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="10">
                        <Image Source="{Binding CurrentUser.Photo}" Width="30" Height="30" Margin="0,0,10,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{Binding CurrentUser.ShortName}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding CurrentUser.Role}" FontSize="10" Foreground="Gray"/>
                        </StackPanel>
                        <ComboBox Margin="5,0,0,0" VerticalAlignment="Center" BorderThickness="0">
                            <ComboBoxItem Content="Мой профиль"/>
                            <ComboBoxItem Content="Мои сессии"/>
                            <ComboBoxItem Content="Выход"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Личный кабинет. Главная" FontSize="22" Margin="0,0,0,20"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="White" Margin="0,0,10,10" Padding="15" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="Эффективность сети" FontWeight="Bold"/>
                                <lvc:AngularGauge Value="{Binding NetworkEfficiencyPercentage}" 
                                                  FromValue="0" ToValue="100" 
                                                  Height="150" LabelsStep="50" TicksStep="25"
                                                  Wedge="300" TicksForeground="White"/>
                                <TextBlock Text="Работающих автоматов - 100%" HorizontalAlignment="Center" Foreground="Green"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Background="White" Margin="10,0,10,10" Padding="15" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="Состояние сети" FontWeight="Bold"/>
                                <lvc:PieChart Series="{Binding NetworkStateSeries}" LegendLocation="Right" Height="150" InnerRadius="50">
                                </lvc:PieChart>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Background="White" Margin="10,0,0,10" Padding="15" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="Сводка" FontWeight="Bold" Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Денег в ТА" Margin="0,2"/>
                                        <TextBlock Text="Сдача в ТА" Margin="0,2"/>
                                        <TextBlock Text="Выручка, сегодня" Margin="0,2"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding TotalMoney}" FontWeight="Bold" Margin="0,2"/>
                                        <TextBlock Text="{Binding TotalChange}" FontWeight="Bold" Margin="0,2"/>
                                        <TextBlock Text="{Binding RevenueToday}" FontWeight="Bold" Margin="0,2"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Border Grid.Row="2" Background="White" Margin="0,10,0,10" Padding="15" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Динамика продаж за последние 10 дней" FontWeight="Bold"/>
                            <TextBlock Text="Данные по продажам с 01.03 по 10.03" FontSize="10" Foreground="Gray" Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <RadioButton Content="По сумме" Style="{StaticResource FilterButtonStyle}" IsChecked="True" 
                                             Command="{Binding FilterSalesCommand}" CommandParameter="Sum"/>
                                <RadioButton Content="По количеству" Style="{StaticResource FilterButtonStyle}" Margin="10,0,0,0"
                                             Command="{Binding FilterSalesCommand}" CommandParameter="Count"/>
                            </StackPanel>

                            <lvc:CartesianChart Series="{Binding SalesDynamicsSeries}" Height="200">
                                <lvc:CartesianChart.AxisX>
                                    <lvc:Axis Labels="{Binding DatesLabels}"/>
                                </lvc:CartesianChart.AxisX>
                                <lvc:CartesianChart.AxisY>
                                    <lvc:Axis MinValue="0"/>
                                </lvc:CartesianChart.AxisY>
                            </lvc:CartesianChart>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="3" Background="White" Margin="0,10,0,0" Padding="15" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Новости" FontWeight="Bold" Margin="0,0,0,10"/>
                            <ItemsControl ItemsSource="{Binding NewsList}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Date, StringFormat=dd.MM.yy}" Foreground="Gray"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Title}" TextDecorations="Underline" Foreground="Blue" Cursor="Hand"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
